package:
    name: vcsaddons
    version: "@VERSION@"

source:
    git_rev: @UVCDAT_BRANCH@
    git_url: https://github.com/cdat/vcsaddons.git

build:
  number: @BUILD_NUMBER@
  skip: True  # [win] 
 
requirements:
  build:
    - {{ compiler("c") }}
  host:
    - python
    - pip
  run:
    - python
    - vcs
    - cdms2
    - libcdms
    - libgcc

test:
  imports:
    - vcsaddons

about:
    home:  http://github.com/cdat/vcsaddons
    summary: Addons to VCS.
    license: BSD
    license_file: bsd-3-clause.txt

